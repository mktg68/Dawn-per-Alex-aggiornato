{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.45 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.45 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="text_with_bg">
  <div class="text_with_bg_inner section-{{ section.id }}-padding"{% if section.settings.bg_color != blank %} style="background-color:{{ section.settings.bg_color }};"{% endif %}>
    <div class="text_with_bg_start">
      <div class="page-width">
      	<div class="text_with_bg_info text-center">
          {% if section.settings.title != blank %}         
            <h2 class="white_color">{{ section.settings.title }}</h2>
            {% if section.settings.info != blank %}
            <div class="richtext white_color">
              {{ section.settings.info }}
            </div>
            {% endif %}
            {% if section.settings.btn_label != blank %}
          	<div class="pt-4">
              <a class="button button--primary button--white" href="{{ section.settings.btn_url }}"{% if section.settings.bg_color != blank %} style="color:{{ section.settings.bg_color }};"{% endif %}>
                {{ section.settings.btn_label }}
              </a>
              {% endif %} 
            </div>
          {% endif %}                
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Text with background",
	"tag": "section",
    "settings": [		
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color"
		},
		{
			"type": "header",
			"content": "section info"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "richtext",
			"id": "info",
			"label": "Info"
		},			
		{
            "type": "text",
            "id": "btn_url",
            "label": "Button URL",
            "default": "/"
        },
        {
            "type": "text",
            "id": "btn_label",
            "label": "Button label",
            "default": "join now"
        },
		{
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
	],	
	"presets": [
      {
        "name": "Text with background"
      }
    ]
  }
{% endschema %}