<div class="story_look">
  <div class="story_look_inner section_start{% if section.settings.bg_shape != blank %} full_bg_shape{% endif %}"{% if section.settings.bg_shape != blank %} style="background-image:url('{{ section.settings.bg_shape }}');"{% endif %}>
    <div class="page-width">
      {% if section.settings.section_title != blank %}
      <div class="section_header text-center">
        <h2>{{ section.settings.section_title }}</h2>
        {% if section.settings.section_info != blank %}
        <div class="richtext">
        	{{ section.settings.section_info }}
        </div>
        {% endif %}
      </div>
      {% endif %}
      <div class="story_look_start">
        <div class="story_look_row list-unstyled grid grid--1-col grid--2-col-desktop">
        	{% for block in section.blocks %}
          	<div class="grid__item">
              <div class="story_look_card">
                {% if block.settings.image != blank %}
                <div class="story_look_card_image position-relative{% if section.settings.enable_overlay != blank %} image_overlay{% endif %}">
                	<img class="w-100" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}"/>
                  	{% if block.settings.title != blank %}
                  	<div class="story_look_card_title">
                  		<h3 class="h2_style white_color">{{ block.settings.title }}</h3>
                  	</div>
                  	{% endif %}
                </div>
                {% endif %}
                {% if block.settings.enable_info_card %}
                <div class="story_look_card_info text-center">
                  <div class="story_look_card_info_title">
                  	<h4 class="fw_normal h4_size">{{ block.settings.richtext }}</h4>
                  </div>
                  {% if block.settings.btn_label != blank %}
                  	<a class="button button--primary" href="{{ block.settings.btn_url }}">{{ block.settings.btn_label }}</a>
                  {% endif %}
                </div>
                {% endif %}
              </div>
          	</div>
          	{% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% if section.settings.bg_color != blank %}
<style>
  .story_look_inner{
    background-color:{{ section.settings.bg_color }};
    background-position: left bottom;
    background-repeat: no-repeat;    
    background-size: contain;
  }
</style>
{% endif %}

{% schema %}
  {
    "name": "Story look",	
	"tag": "section",	
    "settings": [
		{
			"type": "text",
			"id": "bg_shape",
			"label": "Background shape",
			"info": "Upload the shape SVG into files and paste the file URL here."
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color"
		},
		{
			"type": "header",
			"content": "section header"
		},
		{
			"type": "text",
			"id": "section_title",
			"label": "Section title"
		},
		{
			"type": "richtext",
			"id": "section_info",
			"label": "Section info"
		},		
		{
			"type": "checkbox",
			"id": "enable_overlay",
			"label": "Enable image overlay",
			"default": true
		}
	],
	"blocks": [
		{
			"type": "storyLook",
			"limit": 2,
			"name": "Story look",
            "settings":[
				{
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image",
					"info": "Use 500x500 Dimension Image"
                },
				{
                    "type": "text",
                    "id": "title",
                    "label": "Title",
					"default": "Our Story"
                },
				{
                    "type": "checkbox",
                    "id": "enable_info_card",
                    "label": "Enable info card",
					"default": true
                },
				{
                    "type": "richtext",
                    "id": "richtext",
                    "label": "Review info",
					"default": "<p>The Pfaff Family have been manufacturing and retailing garments since 1908.</p>"
                },
				{
                    "type": "url",
                    "id": "btn_url",
                    "label": "Button URL"
                },
				{
                    "type": "text",
                    "id": "btn_label",
                    "label": "Button label",
					"default": "read more"
                }
			]
		}
	],
	"presets": [
      {
        "name": "Story look"
      }
    ]
  }
{% endschema %}