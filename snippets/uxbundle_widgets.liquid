{% comment %} Please do not edit this file. It is automatically updated by Uxbundle app{% endcomment %}
{% if widget_type == "core" %}
<script type="text/javascript">
 window.uxbundleCustomer = {
    id:"{{customer.id}}",
    tags:"{{customer.tags | join: '+' }}",
    firstName: "{{customer.first_name}}",
    lastName: "{{customer.last_name}}",
    email:"{{customer.email}}",
    ordersCount:"{{customer.ordersCount}}",
 }
</script>
{% endif %}
{% if widget_type == 'rating' %}
    <div class="ux-product-rating" data-customer-id="{{customer.id}}" data-product-id="{{product.id}}"></div>
{% endif %}
{% if widget_type == 'reviews' %}
    <div class="ux-customer-reviews" data-customer-id="{{customer.id}}" data-product-id="{{product.id}}"></div>
{% endif %}
{% if widget_type == 'collection-page-ratings' %}
    <div class="ux-collection-page-rating" data-customer-id="{{customer.id}}" data-product-id="{{product.id}}"></div>
{% endif %}
{% if widget_type == 'loyalty-dashboard' %}
    <div class="ux-loyalty-program" data-customer-id="{{customer.id}}"></div>
{% endif %}
{% if widget_type == 'instagram' %}
    <div class="ux-instagram" data-customer-id="{{customer.id}}"></div>
{% endif %}
